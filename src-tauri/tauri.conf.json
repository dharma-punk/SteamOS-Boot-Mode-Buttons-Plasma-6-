{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Win11 To-Do Desktop",
  "version": "0.1.0",
  "identifier": "com.example.win11todo",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Win11 To-Do Desktop",
        "width": 1200,
        "height": 760,
        "minWidth": 980,
        "minHeight": 640,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": []
  }
}
